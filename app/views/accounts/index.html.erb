<div class="page-header">
   <h1>Go Dutch
      <small>and travel the world!</small>
   </h1>
</div>



<h2>Create account</h2>

<%= button_to "New account", new_account_path :method => :get %>


<h2>Join account</h2>


<table class="table table-striped table-bordered table-condensed">
  <thead>
    <tr>
      <th>Account</th>
            <th>Join</th>

    </tr>
  </thead>

  <tbody>
    <% @accounts.each do |account| %>
      <tr>
        <td><%= account.id %></td>
        <%= form_for account do |f| %>
          <%= hidden_field_tag :add_current_user, true %>
          <td><%= f.submit 'Join Account' %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>




